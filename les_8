//Написать код который посчитает сумму всех четных элементов в массиве, в суммировании уча́ствуют только элементы больше 3.

var arr = [1,2,3,4,5,6,7,8,9];
var sumElements = 0;
var l = arr.length;

for (i = 0; i < l; i++)
{
    if(arr[i] > 3){
        if(arr[i] % 2 == 0) {
            sumElements += arr[i];
        }
    }

}
console.log('Сумма элементов = ' + sumElements);
